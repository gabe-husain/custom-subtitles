{
    "manifest_version": 3,
    "name": "Custom Subtitle Overlay",
    "version": "1.0",
    "description": "Add custom SRT subtitle overlays to any webpage",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
      "default_title": "Custom Subtitles",
      "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }]
  }